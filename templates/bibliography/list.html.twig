{%- extends 'base.html.twig' -%}

{%- block page_content -%}

    {% import _self as self %}

    <p class="eomr-subtitle">{{ 'controller.bibliographic-record.list.description'|trans }}</p>

    {% for record in records %}
        <p>{{ self.render_record(record) }}</p>
    {% endfor %}
{%- endblock -%}

{%- macro render_record(bibliographicRecord) -%}
    <span>
        <span>{{- bibliographicRecord.shortName -}}</span>
        {{- ' — ' -}}
        <span>{{- bibliographicRecord.formalNotation -}}</span>
    </span>
{%- endmacro -%}